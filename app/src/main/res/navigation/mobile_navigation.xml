<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.rukigaapp.ui.home.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_library"
            app:destination="@id/nav_library" />
        <action
            android:id="@+id/action_nav_home_to_nav_quiz"
            app:destination="@id/nav_quiz" />
    </fragment>

    <fragment
        android:id="@+id/nav_library"
        android:name="com.example.rukigaapp.ui.dictionary.DictionaryFragment"
        android:label=""
        tools:layout="@layout/fragment_dictionary" />

    <fragment
        android:id="@+id/nav_quiz"
        android:name="com.example.rukigaapp.ui.quiz.QuizFragment"
        android:label=""
        tools:layout="@layout/fragment_quiz" />
</navigation>