<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Button Styles -->
    <style name="OutlineButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <style name="FilledButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>

    <style name="ErrorButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>
</resources>